.content.row
  .content-left.col-xs-2.bg-info
    aaa
  .content-right.col-xs-10
    .content-right-header
      search
    .content-right-body
      %h1 Listing todos

      %table.table-striped.table-bordered.col-xs-10.col-xs-offset-1
        %thead
          %tr.row
            %th.col-xs-3
              Name
            %th.col-xs-4
              Text
            %th.col-xs-3
              Division
            %th.col-xs-1
            %th.col-xs-1
            %th.col-xs-1

        %tbody
          - @todos.each do |todo|
            %tr.row
              %td.col-xs-3
                = todo.name
              %td.col-xs-4
                = todo.text
              %td.col-xs-3
                = todo.division
              %td.col-xs-1
                = link_to todo do
                  %i.fa.fa-file
              %td.col-xs-1
                = link_to edit_todo_path(todo) do
                  %i.fa.fa-cog
              %td.col-xs-1
                = link_to todo, method: :delete, data: { confirm: 'Are you sure?' } do
                  %i.fa.fa-trash
      .col-xs-10.col-xs-offset-1
        = link_to 'New Todo', new_todo_path
